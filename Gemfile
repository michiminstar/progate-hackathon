group :development do
  gem 'sqlite3', '1.3.8'
  # モデルにそのデータ構造のコメントをいれてくれる
  gem 'annotate'
  # エラー出力をいい感じにしてくれる
  gem 'better_errors'
  # ブラウザ上でデバッグ
  gem 'binding_of_caller'
